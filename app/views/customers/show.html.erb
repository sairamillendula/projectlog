<div id="column_left">
<h2><%= @customer.name %></h2>

<p>
  <b>Phone:</b>
  <%= @customer.phone %>
</p>

<p>
  <b>Address:</b>
    <% if !@customer.address2.present? %>
      <%= @customer.address1 %><br/>
    <% else %> 
	  <%= @customer.address1 %><br />
	  <%= @customer.address2 %><br />
    <% end %>
  <%= @customer.city %> <%= @customer.province %> <%= @customer.postal_code %><br/>
  <%= @customer.country %>
</p>

<p>
  <b>User:</b>
  <%= @customer.user_id %>
</p>

<div id="customer_note">
  <% if @customer.note.present? %>
	 <%= @customer.note %>
</div>
	 <p id="note_toggle"><a href="#">Show/Hide Note</a></p>
  <% else %>
     <p><%= link_to "Add a Note", edit_customer_path(@customer) %></p>
  <% end %>

<br/>
 <%= link_to 'Edit', edit_customer_path %> |
 <%= link_to 'All Customers', customers_path %>
</div>
</div>

<div id="column_right">
  <%= render :partial => 'contacts/contacts' %>
  <%= link_to 'New contact AJAX', new_customer_contact_path(@customer, @contact, :format => :js), :remote => true, :id => 'new_contact_link' %>
</div>

<script>
    $("#note_toggle").click(function () {
      $("#customer_note").slideToggle("slow");
    });
</script>