<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation" class="alert">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="inline-form">
  <div class="field">
    <%= f.label :name, :class=> 'mandatory' %>
    <%= f.text_field :name, :size => 60 %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.phone_field :phone %>
  </div>
  <div class="field">
    <%= f.label :address1 %>
    <%= f.text_field :address1 %>
  </div>
  <div class="field">
    <%= f.label :address2 %>
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :province %>
    <%= collection_select(:customer, :province, Province.all, :name, :name, options = {:prompt => ""}) %>
  </div>
  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, :size => 6 %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= collection_select(:customer, :country, Country.all, :printable_name, :printable_name, options = {:prompt => ""}) %>
  </div>
  <div class="field">
    <%= f.label :note %>
    <span class="markdown"><a href="http://getprojectlog.com/help/knowledgebase/markdown/?src=app" target="_blank">Markdown accepted</a></span><br/>
    <%= f.text_area :note %></span>
  </div>
  <div class="actions">
    <p class="submit"><%= submit_or_cancel(f) %></p>
  </div>
<% end %>

