<ul id="sub-menu" class="no-print">
  <%= link_to '← All invoices', invoices_path %> |
  <%= link_to 'Edit', edit_invoice_path(@invoice) %> |
  <%= link_to 'Send', prepare_email_invoice_path(@invoice), :remote => true %> |
  <%= link_to 'Download PDF', invoice_path(@invoice, :format => :pdf) %>

  <li><%= link_to '+ Payment', new_invoice_payment_path(@invoice), :class => 'buttonorange', :remote => true %></li>
  <li><%= link_to 'Show Payments', invoice_payments_path(@invoice), :class => 'buttonorange', :remote => true %></li>
</ul>

<div id="invoice-page" class="invoice <%= @invoice.status.gsub " ", "-" %>">

<% if get_company_info(@invoice.user.profile).size > 0 %>
  <div class="company-info">
    <%= get_company_info @invoice.user.profile %>
  </div>
<% end %>

<h1>Invoice</h1>

<p>
  <b>Invoice number:</b>
  <%= @invoice.invoice_number %>
</p>

<p>
  <b>Issued date:</b>
  <%= @invoice.issued_date %>
</p>

<p>
  <b>Due date:</b>
  <%= @invoice.due_date %>
</p>

<p>
  <b>Subject:</b>
  <%= @invoice.subject %>
</p>

<p>
  <b>Balance:</b>
  <span id="invoice-balance"><%= @invoice.balance %></span>
</p>

<p>
  <b>Status:</b>
  <span id="invoice-status"><%= @invoice.status %></span>
</p>

<p>
  <b>Note:</b>
  <%= @invoice.note %>
</p>

<p>
  <b>Currency:</b>
  <%= @invoice.currency %>
</p>

<p>
  <b>Discount:</b>
  <%= @invoice.discount %> %
</p>

<p>
  <b>Customer:</b>
  <%= @invoice.customer.name %>
</p>

<h3>Line Items </h3>
<div id="line_items_list"><%= render 'line_items_list' %></div>

</div>

<div class="no-print">
  <%= link_to 'Add Line Item', add_line_item_invoice_path(@invoice), onclick: "$('#new_line_item_form').toggle(); return false;" %>
</div>
