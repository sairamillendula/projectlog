<h1>Listing activities</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project.activities.each do |activity| %>
  <tr>
    <td><%= activity.date %></td>
    <td><%= activity.time %></td>
    <td><%= activity.description %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>

<% end %>
  <tr class="total">
	 <th style="text-align:right" class="total">TOTAL</th>
	 <th><%= @project.activities.sum(:time) %></th>
	 <th></th>
	 <th></th>
	 <th></th>
	 <th></th>
  </tr>
</table>
<%= will_paginate @activities %>
<br />

