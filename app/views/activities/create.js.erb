<% if @activity.valid? %>
  $("#activities").html($("<%= escape_javascript render(:partial => 'activities/activities') %>"));
  $("#new_activity").remove();
  $('#new_activity_link').show();
  alert("Activity was succesfully created");
<% else %>
  alert("Please fill in all the fields: <%= @activity.errors.full_messages.to_sentence %>.");
<% end %>