<% if @activity.valid? %>
  $("#time-entries").replaceWith($("<%= escape_javascript render(:partial => 'activities/activities', :locals => { :activity => @activity }) %>"));
  $("#new_activity").remove();
  $('#new_activity_link').show();
  alert("Activity was succesfully created");
<% else %>
  alert("Please fill in all the fields.");
<% end %>