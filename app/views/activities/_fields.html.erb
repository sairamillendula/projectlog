<h1>Add an Activity</h1>

<table id="new-activity" class='borders'>
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Description</th>
    <th></th>
  </tr>
  <tr id="activity-fields">
    <td><%= f.text_field :date, :class => "date", :size => 12 %></td>
    <td><%= f.text_field :time, :size => 4 %></td>
    <td><%= f.text_field :description, :size => 88 %></td>
    <td><span class="small submit"><%= f.submit %></span></td>
  </tr>
</table>