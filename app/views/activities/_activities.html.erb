<% if @project.activities.empty? %>
  <div class="no-occurence">
     <p>No activities found. Add a new <%= link_to 'Activity', new_project_activity_path(@project) %></p>
  </div>
<% else %>
<br/>
<div id="time-entries">
  <h2>Time Entries</h2>  
	<table>
	  <tr>
	    <th>Date</th>
	    <th>Time</th>
	    <th>Description</th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @project.activities.each do |activity| %>
	  <tr>
	    <td><%= l activity.date %></td>
	    <td><%= activity.time %></td>
	    <td><%= activity.description %></td>
	    <td><%= link_to 'Edit', edit_project_activity_path(@project, activity) %></td>
	    <td><%= link_to 'Destroy', project_activity_path(@project, activity), :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	
	  <tr class="total">
	    <th style="text-align:right" class="total">TOTAL</th>
	    <th><%= @project.activities.sum(:time) %></th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	</table>
	<%= will_paginate @project.activities %>
</div>

<p id="new_activity_link"><%= link_to 'New Activity', new_project_activity_path(@project) %> | 
	<%= link_to 'New activity AJAX', new_project_activity_path(@project, :format => :js), :remote => true %>
</p>

<% end %>