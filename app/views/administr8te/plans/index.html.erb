<ul id="sub-menu">
  <li class="buttonorange"><%= link_to '+ New Plan', new_administr8te_plan_path %></li>
</ul>

<h1>User Plans</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Status</th>
    <th>User count</th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= link_to plan.name, administr8te_plan_path(plan) %></td>
    <td><%= plan.description %></td>
    <td><%= plan.price %></td>
    <td><%= plan.active? ? content_tag(:span, 'Active', :class => 'active') : content_tag(:span, 'Inactive', :class => 'inactive') %></td>
    <td><%= pluralize plan.users.count, "user" %></td>
    <td><%= link_to 'Edit', edit_administr8te_plan_path(plan) %></td>
    <td>
      <% if plan.can_be_destroyed? %>
        <%= link_to 'Destroy', administr8te_plan_path(plan), confirm: 'Are you sure?', method: :delete %>
      <% else %>
        <span class="tipsied grayed_out" title="You can't delete this plan because there are users using it.">Destroy</span>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
