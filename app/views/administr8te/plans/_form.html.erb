<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this administr8te_plan from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="inline-form">
  <div class="field">
    <%= f.label :name, :class => 'mandatory' %>
    <%= f.text_field :name, :size => '50' %>
  </div>
  <div class="field">
    <%= f.label :features %>
    <%= f.text_area :features, :cols => '88', :rows => '6' %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :cols => '88', :rows => '6' %>
  </div>
  <div class="field">
    <%= f.label :price, :class => 'mandatory' %>
    <%= f.text_field :price, :size => '8' %>
  </div>
  <div class="field">
    <%= f.label :active, :class => 'mandatory' %>
    <%= f.radio_button :active, true %> Active
    <%= f.radio_button  :active, false %> Inactive
  </div>
  <div class="actions">
    <p class="submit"><%= submit_or_cancel(f) %></p>
  </div>
</div>
<% end %>
