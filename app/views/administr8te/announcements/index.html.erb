<h1>Listing announcements</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>Acknowledged by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @announcements.each do |announcement| %>
  <tr>
    <td><%= announcement.message %></td>
    <td><%= announcement.starts_at %></td>
    <td><%= announcement.ends_at %></td>
    <td><%= pluralize announcement.hidden_by_user_ids.count, "user" %></td>
    <td><%= link_to 'Show', administr8te_announcement_path(announcement) %></td>
    <td><%= link_to 'Edit', edit_administr8te_announcement_path(announcement) %></td>
    <td><%= link_to 'Destroy', administr8te_announcement_path(announcement), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

