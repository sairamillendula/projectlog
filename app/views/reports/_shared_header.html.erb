<header role="banner" id="header">
  <hgroup class="subhead">
     <h1>TIMESHEET
       <div id="actions">
         <% if @report.approved? %><span class="approved_report"%>Approved</span><% end %> 
         <%= link_to image_tag("file_download.png") + "Download PDF", params.merge(:format => :pdf, :action => "shared") %>
       </div>
     </h1>
     <div id="intro" class="info">
	   <h2>Hello there, <%= @report.user.name %> wish to share this report with you.
	     <% if !@report.approved? && @report.activities.any? %>
	       If you agree please accept it  
	       <%= link_to "'I approve this report'", shared_approve_report_path(@report), :method => :post, 
	       :class => "approve_report", :title => "This action can not be undone. Approve only if you are authorized" %>
	     <% end %>
	   </h2>
	</div>
</div>
  </hgroup> 
</header>


<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $('.approve_report').tipsy({gravity: 's'});
  });
</script>