<%= form_for @email, :url => report_emails_path(@report), :remote => :true do |f| %>
  <%= f.label :to %>
  <%= f.text_field :to %> <br />
  <%= f.label :subject %>
  <%= f.text_field :subject %> <br />
  <%= f.label :body, "Message" %> <br />
  <%= f.text_area :body, :rows => 10 %> <br />
  <%= f.hidden_field :report_link %>
<% end %>