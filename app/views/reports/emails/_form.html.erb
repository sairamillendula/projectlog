<%= form_for @email, :url => report_emails_path(@report), :remote => :true do |f| %>
  <%= f.label :to, "Recipient" %>
  <%= f.text_field :to, :value => current_user.connections.select { |c| c.email.present? }.map { |c| c.email }.join(',') %><br />
  <%= f.label :subject %><br />
  <%= f.text_field :subject %><br />
  <%= f.label :body, "Message" %><br />
  <%= f.text_area :body %><br />
  <%= f.hidden_field :report_link %><br />
 
  <div>
    <h2>Or share this public link with guests:</h2>
    <p><%= shared_report_url(@report) %></p>
  </div>

  <div class="status_indicator"></div>
  <%= f.submit "Send" %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $("#reports_email_to").livequery(function() {
      $(this).tagsInput({
        autocomplete_url: '<%= contacts_report_emails_url(@report) %>',
        width: "380px",
        height: "27px",
        defaultText: 'Type contact name'
      });
    });
  });
</script>