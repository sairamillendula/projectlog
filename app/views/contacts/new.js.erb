$("#new_contact_dialog").remove(); // Remove the dialog in case it's been created before so we can create a new one with the same id.
$('<div id="new_contact_dialog"></div>')
		.html('<%= escape_javascript render(:partial => 'fields', :formats => [:js]) %>')
		.dialog({
			autoOpen: true,
			modal: true,
			title: 'Add a Contact for <%= @customer.name %>',
			buttons: { 'Create Contact' :  function(){ $(this).find("form").submit(); }, 'Cancel' : function(){ $(this).dialog("close"); } },
			show: "fade",
			hide: "fade",
			width: 420
    });