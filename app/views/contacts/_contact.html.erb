<ul class="card-entry">
  <li class="card contact">
    <div class="card-inner contact">
    <% if contact.title.present? %>
      <h2><%= contact.full_name %><span style="font-weight:normal"> - <%= contact.title %></span></h2>
    <% else %>
      <h2><%= contact.full_name %></h2>
    <% end %>
      <p><a href="mailto:<%= contact.email %>"><%= contact.email %></a></p>
      <p><%= contact.phone %>
         <span class='floatr actions' style='display:none;'>
           <%= link_to 'Edit', edit_customer_contact_path(@customer, contact), :remote => true %> |
           <%= link_to 'Destroy', customer_contact_path(@customer, contact), :data => {:confirm => 'Are you sure?'}, :method => :delete %>
         </span>
      </p>
    </div>
  </li>
</ul>