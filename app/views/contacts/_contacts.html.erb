<% if @customer.contacts.empty? %>
  <div class="no-occurence">
     <p>Add a new <%= link_to 'Contact', new_customer_contact_path(@customer) %></p>
  </div>
<% else %>

  <h1>Contacts</h1>
     <% for contact in @customer.contacts %>
     <%= render :partial => "contacts/contact", :locals => { :contact => contact } %>
<% end %>

<p id="new_contact_link" class="clear"><%= link_to 'New Contact', new_customer_contact_path(@customer, :format => :js), :remote => true %></p>

<% end %>
