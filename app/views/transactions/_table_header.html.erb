<div id="transactions-search">	
	<%= link_to 'Create Report', new_report_path %> 
	<span id="export" class="right">
		<%= form_tag transactions_path, :method => 'get', :id => "transactions_search" do %>
  		<%= hidden_field_tag :direction, params[:direction] %>
  		<%= hidden_field_tag :sort, params[:sort] %>
  		<%= text_field_tag :search, params[:search] %>
		  <span class="small submit"><%= submit_tag "Search", :name => nil %></span>
		<% end %>
	</span>
</div>