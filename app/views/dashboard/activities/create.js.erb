<% if @activity.valid? %>
  $("form#new_activity").get(0).reset(); // Clear out the form
  $("#activity-fields").effect("highlight", {}, 1000);
  $("#billable-chart").html($("<%= escape_javascript render(:partial => 'dashboard/last_week_pie_charts') %>"));
  $("#recent-activities").html($("<%= escape_javascript render(:partial => 'dashboard/activities/recent') %>"));
<% else %>
  $('<div id="activity-error"></div>')
		.html('<div class="alert">Please fix the following errors: <%= escape_javascript @activity.errors.full_messages.to_sentence %></div>')
		.dialog({
			autoOpen: true,
			buttons: { 'OK' : function(){ $(this).dialog("close"); } },
			modal: true,
			show: "fade",
			hide: "fade",
    });
<% end %>