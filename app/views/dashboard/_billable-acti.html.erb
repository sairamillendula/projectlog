<div id="billable-activities">
	
<h1>Billable time in the last week</h1>
  <% if billable_time_grouped_by_date_in_the_last_days(7).empty? %>
    You haven't worked in the last 7 days. You lazy donkey!
  <% else %>
    <table id="acti">
      <tr>
        <th>Day</th>      
        <th>Billable hours</th>
      </tr>
      <% billable_time_grouped_by_date_in_the_last_days(7).each do |day, time| %>
        <tr>
          <td><%= l(day, :format => :short) %></td>
          <td><%= time %></td>
        </tr>
      <% end %>
    </table>
  <% end %>

</div>

<%= image_tag Gchart.pie(:data => [0, 40, 10, 70, 20]) %>

<%= image_tag Gchart.line(billable_time_grouped_by_date_in_the_last_days(7) )%>

