<table>
  <tr>
    <th></th>
    <th>Amount</th>
    <th>Date</th>
    <th></th>
  </tr>
<% @payments.each do |payment| %>
  <tr>
    <td></td>
    <td>
      <%= payment.amount %>
    </td>
    <td>
      <%= payment.date %>
    </td>
    <td>
      <%= link_to 'Edit', edit_invoice_payment_path(@invoice, payment), :remote => true %> 
      <%= link_to image_tag("bin.png"), [@invoice, payment], :confirm => 'Are you sure?', :method => :delete, :remote => true %>
    </td>
  </tr>
<% end %>
  <tr>
    <td>Total:</td>
    <td><%= @total %></td>
    <td colspan="2"><%= link_to 'Add Payment', "#{new_invoice_payment_path(@invoice)}?update_payments=yes", :remote => true %></td>
  </tr>
</table>