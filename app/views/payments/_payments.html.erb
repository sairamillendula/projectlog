<table id='payments_table'>
  <tr>
    <th>&nbsp;</th>
    <th>Amount</th>
    <th>Date</th>
    <th>&nbsp;</th>
  </tr>
<% @payments.each do |payment| %>
  <tr>
    <td>&nbsp;</td>
    <td>
      <%= Money.from_float(payment.amount, @invoice.currency).format(:symbol => true) %>
    </td>
    <td>
      <%= payment.date %>
    </td>
    <td>
      <%= link_to 'Edit', edit_invoice_payment_path(@invoice, payment), :remote => true %> 
      <%= link_to image_tag("bin.png"), [@invoice, payment], :confirm => 'Are you sure?', :method => :delete, :remote => true %>
    </td>
  </tr>
<% end %>
  <tr class="payments_total">
    <td>Total:</td>
    <td><%= Money.from_float(@total.round(2), @invoice.currency).format(:symbol => true) %></td>
    <td colspan="2">&nbsp;</td>
  </tr>
  <tr class="payments_balance">
    <td>Balance:</td>
    <td><%= Money.from_float(@invoice.balance, @invoice.currency).format(:symbol => true) %></td>
    <td colspan="2"><%= link_to 'Add Payment', "#{new_invoice_payment_path(@invoice)}?update_payments=yes", :remote => true unless @invoice.is_fully_paid? %></td>
  </tr>
</table>