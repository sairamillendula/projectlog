$('<div id="edit_payment_dialog"></div>')
.html('<%= escape_javascript render(:partial => 'fields') %>')
.dialog({
autoOpen: true,
modal: true,
title: 'Edit Payment',
buttons: { 'Update Payment' : function(){ $(this).find("form").submit(); }, 'Cancel' : function(){ $(this).dialog("destroy").remove(); } },
show: "fade",
hide: "fade",
width: 420,
close: function(event, ui) { $(this).remove(); }
});