<%= form_for(@project, :remote => true, :html => {:id => "project-form"}) do |f| %>

<div class="inline-form">
  <div class="field">
    <%= f.label :title, :class => 'mandatory' %>
    <%= f.text_field :title, :style => 'width:280px;' %>
  </div>
  <div class="field">
    <%= f.label :internal, 'Internal?', :for => 'internal' %>
    <%= f.check_box :internal, :id => 'internal' %> <i id="internal-notice" style="display:none;">Internal projects are not billable</i>
  </div>

  <div id="billing">
	<div class="field">
	  <%= f.label :customer_name, 'Customer', :class => 'mandatory' %>
	  <%= f.text_field :customer_name, :style => 'width:280px;' %>
	</div>	
	<div class="field">
	  <%= f.label :billing_code_id, 'Billing Method' %>
	  <%= collection_select(:project, :billing_code_id, BillingCode.all, :id, :name, options = {:prompt => "Select Billing method"} ) %><br />
	</div>
	
	<div id="billing-scenario">
	  <span id="hourly">
	    Total hours allowed:<br /> 
	    <%= f.text_field :total_unit, :id => "hourly_total_unit", :class => 'short' %> hours at a rate of <%= f.text_field :default_rate, :id => "hourly_default_rate", :class => 'short' %> <%= number_to_currency("") %>
	  </span>
		
	  <span id="per_diem">
		Total days allowed: <br />
		<%= f.text_field :total_unit, :id => "per_diem_total_unit", :class => 'short' %> days at a rate of <%= f.text_field :default_rate, :id => "per_diem_default_rate", :class => 'short' %> <%= number_to_currency("") %>
	  </span>
		
	  <span id="fixed">
	    Fixed price: <%= f.text_field :default_rate, :id => "fixed_default_rate", :class => 'medium' %> <%= number_to_currency("") %>
	  </span>
    </div>  <%# billing-scenario %>
  </div>  <%# billing %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    Projects.Form.init(true);
  });
</script>
