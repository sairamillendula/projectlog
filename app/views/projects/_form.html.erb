<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation" class="alert">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="inline-form">
  <div class="field">
    <%= f.label :title, :class => 'mandatory' %>
    <%= f.text_field :title, :size => '100' %>
  </div>

  <div class="field">
    <%= f.label :internal, 'Internal?' %>
    <%= f.check_box :internal, :id => 'internal' %> <i id="internal-notice" style="display:none;">Internal projects are not billable</i>
  </div>

  <div id="billing">
    <% if @project.persisted? || @project.customer.blank?  %>
	<%# Hide the customer field if it's a new project but already has the customer set up. %>
	  <div class="field">
	    <%= f.label :customer_id, :class => 'mandatory' %>
	    <%= collection_select(:project, :customer_id, current_user.customers.all, :id, :name, options = { :prompt => "Select Customer" } ) %>
	  </div>
	<% else %>
	   <b>Customer</b>
	   <%= @project.customer.name %>
	  </div>
	<% end %>
	
	<div class="field">
	  <%= f.label :billing_code_id, 'Billing Method' %>
	  <%= collection_select(:project, :billing_code_id, BillingCode.all, :id, :name, options = {:prompt => "Select Billing method"} ) %><br />
	</div>
	
	<div id="billing-scenario">
	  <span id="hourly">
	    Total hours allowed for this project: <%= f.text_field :total_unit, :size => '8' %> at a rate of <%= f.text_field :default_rate, :size => '8' %><%= number_to_currency("") %>
	  </span>
		
	  <span id="per_diem">
		Total days allowed <%= f.text_field :total_unit, :size => '6' %> at a rate of <%= f.text_field :default_rate, :size => '6' %><%= number_to_currency("") %>
	    <% if current_user.profile.hours_per_day.nil? %>
	      <span id="hours-per-day-notice">Hours by Day not set. Update your <%= link_to 'settings', settings_path %> to convert Activities to Days</span>
		<% end %>
	  </span>
		
	  <span id="fixed">Fixed price: <%= f.text_field :default_rate, :size => '8' %><%= number_to_currency("") %></span>
    </div>  <%# billing-scenario %>
  </div>  <%# billing %>
  
  <% if !@project.new_record? %>
    <div class="field">
	  <%= f.label :status %>
	  <%= f.select(:status, options_for_select([['Open', true], ['Closed', false]])) %>
	</div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <span class="markdown"><a href="http://getprojectlog.com/help/knowledgebase/markdown/?src=app" target="_blank">Markdown accepted</a></span><br/>
    <%= f.text_area :description, :cols => '88', :rows => '6' %>
  </div>

  <div class="actions">
    <p class="submit"><%= submit_or_cancel(f) %></p>
  </div>
<% end %>
</div>

<script type="text/javascript" charset="utf-8">
$(document).ready(function(){
$("#internal").change(function() { 
	$("#billing").toggle();
	$("#internal-notice").toggle(); 
	} );
});
</script>
<script type="text/javascript" charset="utf-8">
hideBillingScenario = function () {
    $("#hourly, #per_diem, #fixed").hide();
};

handleNewSelection = function () {

    hideBillingScenario();

    switch ($(this).find('option:selected').val()) {
        case '1':
            $("#hourly").show();
        break;
        case '2':
            $("#per_diem").show();
        break;
        case '3':
            $("#fixed").show();
        break;
    }
};

$(document).ready(function() {

    $("#project_billing_code_id").change(handleNewSelection);

    // Run the event handler once now to ensure everything is as it should be
    handleNewSelection.apply($("#project_billing_code_id"));

});
</script>