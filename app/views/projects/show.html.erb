<%= render :partial => 'submenu' %>

<div>
   <h1><%= @project.title %>
     <% if @project.internal? %><span class="internal">INTERNAL</span> <% end %>
     <% if @project.status? %>
       <span class="status open">OPEN</span>
     <% else %>
       <span class="status">CLOSED</span> 
     <% end %>
   </h1>
<div>
<div id="column_left">
	<p>
	   <b>Description:</b>
	   <%= markdown(@project.description) %>
	</p>
</div>
	<% if !@project.internal? %>
	
<div id="column_right">
	  <p>
		<label class="label-wide">Customer:</label>
	    <%= @project.customer.name %>
	  </p>
	  <p>
	    <label class="label-wide">Default Rate:</label>
          <% if @current_user.profile.localization.present? %>
	        <%= number_to_currency(@project.default_rate) %>
	      <% else %>
	        <%= @project.default_rate %>
	      <% end %>
	    <br/>
	  </p>
	  <p>
	     <label class="label-wide">Billing:</label>
	       <% if @project.billing_code_id.present? %>
	         <%= @project.billing_code.name %>
	       <% end %>
	  </p>	
</div>
<% end %>

<div id="activities">
  <%= render "activities/activities" %>
</div>
