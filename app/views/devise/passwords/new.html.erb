<h1>Forgot your password?</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <h2><%= f.label :email %></h2>
  <%= f.email_field :email %>

  <p class="submit"><%= f.submit "Send me reset password instructions" %></p>
<% end %>